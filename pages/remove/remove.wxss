.derect{
  width: 90%;
  height: 200px;
  /* background: red; */
  position: relative;
  margin: 50% auto;
  text-align: center;
}
#qianjin,#houtui,#zuozhuan,#youzhuan{
  position: absolute;
  transform: translate(-50%,0);
  width: 100px;
  height: 40px;
}
#qianjin{
  margin-top: 50px;
}
#houtui{
  margin-top: 120px;
}
#zuozhuan{
  margin-top: 120px;
  transform: translate(-160%,0);
}
#youzhuan{
  margin-top: 120px;
  transform: translate(60%,0);
}
.open{
  width: 100%;
  height: 10px;
  position: absolute;
  /* background: red; */
  margin-top: 100px;
}
.open button{
  position: absolute;
  margin-left: 60%;
}
.open button:nth-child(2){
  margin-left: 80%;
}